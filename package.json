{
  "name": "demo-full-stack-app",
  "version": "1.0.0",
  "main": "server/server.js",
  "author": "DavTheDev20 <reiddavin@outlook.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.7"
  },
  "scripts": {
    "start": "cd server && node server.js",
    "server": "cd server && nodemon server.js",
    "client": "cd client && yarn start",
    "install-server": "cd server && yarn install",
    "install-client": "cd client && yarn install",
    "install": "yarn install-server && yarn install-client",
    "dev": "concurrently -n 'server,client' -c 'red,blue' \"yarn server\" \"yarn client\"",
    "build": "cd client && yarn build",
    "heroku-postbuild": "yarn install && yarn build"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15"
  }
}
